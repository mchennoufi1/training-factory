{% extends 'base.html.twig' %}

{% block body %}
    <h1>Instructeurs toevoegen</h1>

    {# Formulier voor het toevoegen van een instructeur #}
    <form method="POST" action="{{ path('admin_instructeur_add') }}">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Toevoegen</button>
        {{ form_end(form) }}
    </form>

    <h2>Gebruikers</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Naam</th>
                <th>Email</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Wijzigen</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Uitloggen</h2>

    <ul>
        <li>Your logout at <code><a href="{{ path('logout') }}">uitloggen</a></code></li>
    </ul>
{% endblock %}
